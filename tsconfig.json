{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020","DOM"
		],
		"sourceMap": false,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"types": ["@types/oracledb"],

		"baseUrl": "./",
		"paths": {
			"crypto": [
				"node_modules/mysql2"
			  ],
			  "stream": [
				"node_modules/mysql2"
			  ],
			  "events": [
				"node_modules/mysql2"
			  ],
			  "url": [
				"node_modules/mysql2"
			  ],
			  "process": [
				"node_modules/mysql2"
			  ],
			  "net": [
				"node_modules/mysql2"
			  ],
			  "tls": [
				"node_modules/mysql2"
			  ],
			  "timers": [
				"node_modules/mysql2"
			  ],
			  "util": [
				"node_modules/mysql2"
			  ],
			  "buffer": [
				"node_modules/mysql2"
			  ],
			  "zlib": [
				"node_modules/mysql2"
			  ]
		},
		"forceSaferBuffer": false
		
		/* Additional Checks */
		// "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
		// "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statement. */
		// "noUnusedParameters": true,  /* Report errors on unused parameters. */
	},
	"exclude": ["node_modules", ".vscode", "src/webview/","out"]
}
